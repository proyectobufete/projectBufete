                {{form_label(edit_form.idTrabajo,'Profesión u Oficio')}}
                {{ form_errors(edit_form) }}
                {{ form_widget(edit_form.idTrabajo,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
        </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-2 col-md-9">
              <input type="submit" value="Edit" class="btn blue" />
              <a href="{{ path('demandantes_index') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        {{ form_end(edit_form) }}
      </div>
    </div>

{% endblock %}
