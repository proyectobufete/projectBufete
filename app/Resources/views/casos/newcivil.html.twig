{% extends 'layout.html.twig' %}
{% block act3 %} active {% endblock %}
{% block ac8 %} active {% endblock %}
      {% block title %}
        <h1>Ficha de Adjudicación de Casos Ramo Civil</h1>
      {% endblock %}

{% block body %}

    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >

        {{ form_start(form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-3">
            <div class="row">
              <div class="col-md-5">
                {% for message in app.session.flashbag().get('status') %}
                  <div class="alert alert-danger text-center">
                    <strong>¡Error! </strong>{{message}}
                  </div>
                {% endfor %}
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                {{form_label(form.fechaCaso,'Fecha')}}
                {{form_widget(form.fechaCaso,{'attr':{'class' : 'form-control'}}) }}
              </div>
              <div class="col-md-2">
                {{form_label(form.noCaso,'No. Caso')}}
                {{form_widget(form.noCaso,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                {{form_label(form.asunto,'Asunto')}}
                {{form_widget(form.asunto,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="col-md-offset-4">
                  <label for=""><h3><b>Demandante</b></h3></label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                {{form_widget(form.idDemandante,{'attr':{ 'data-live-search' :'true','class' : 'selectpicker form-control'}}) }}
              </div>
              <div class="col-md-3">
                <button type="button" name="cancelar" class="btn btn-purple" data-toggle="modal" data-target="#myModal">Registrar</button>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                <div class="col-md-offset-3">
                  <label disabled for=""><h3><b>Pretención Procesal</b></h3></label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                {{form_widget(form.civiles)}}
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                <div class="col-md-offset-5">
                  <label disabled for=""><h3><b>Pruebas</b></h3></label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                {{form_widget(form.pruebasCaso,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="col-md-offset-2">
                  <label disabled for=""><h3><b>Datos del Demandado</b></h3></label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                {{form_label(form.nombreDemandado,'Nombre Completo')}}
                {{form_widget(form.nombreDemandado,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-1">
                {{form_label(form.otroDemandado,'Edad')}}
                {{form_widget(form.otroDemandado,{'attr':{'class' : 'form-control'}}) }}
              </div>
              <div class="col-md-3">
                {{form_label(form.telefonoDemandado,'Teléfono')}}
                {{form_widget(form.telefonoDemandado,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                {{form_label(form.dirDemandado,'Dirección')}}
                {{form_widget(form.dirDemandado,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                {{form_label(form.dirnotificacionDemandado,'Dirección de Notificación')}}
                {{form_widget(form.dirnotificacionDemandado,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <hr style="color:black;" />
            <div class="row">
              <div class="col-md-3">
                {{form_label(form.idEstudiante,'Estudiante')}}
                {{form_widget(form.idEstudiante,{'attr':{ 'data-live-search' :'true','class' : 'selectpicker form-control'}}) }}
              </div>
              <div class="col-md-2">
                {{form_label(form.idPersona,'Asesor')}}
                {{form_widget(form.idPersona,{'attr':{ 'data-live-search' :'true','class' : 'selectpicker form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                {{form_label(form.idTribunal,'Tribunal')}}
                {{form_widget(form.idTribunal,{'attr':{'data-live-search' :'true','class' : 'selectpicker form-control'}}) }}
              </div>
              <div class="col-md-2">
                {{form_label(form.estadoCaso,'Estado del Caso')}}
                {{form_widget(form.estadoCaso,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-3 col-md-9">
              <button type="submit" name="Create" class="btn green">Crear</button>
              <a href="{{ path('casos_indexciviles') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
{% endblock %}
