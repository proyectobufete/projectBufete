{% extends 'layout.html.twig' %}
{% block act3 %} active {% endblock %}
{% block ac9 %} active {% endblock %}
{% block title %}
  <h1>Detalles</h1>
{% endblock %}
{% block body %}
      <div class="portlet-body">
        <div class="col-md-offset-3">
          <div class="row">
              <div class="col-md-5">
              <label for="" class=" control-label"><h4><b>Lugar y Fecha</b></h4></label>
                <input disabled type="text" style="font-size:20px;"  class="form-control input-lg " value="{{ caso.idDemandante.idCiudad.ciudad }}, {{ caso.idDemandante.idCiudad.idDepartamento.departamento}}, {% if caso.fechaCaso %}{{ caso.fechaCaso|date('Y-m-d') }}{% endif %}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>No. Caso</b></h4></b></label>
              <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.noCaso }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-6">
                <label for=""><h3><b>Asunto</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-7">
             <textarea disabled class="form-control" style="font-size:18px;" rows="1" value="" id="comment">{{ caso.asunto }}</textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-5">
                <label disabled for=""><h3><b>Datos del Demandante</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-4">
              <label  for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:19px;"  class="form-control input-lg" value="{{ caso.idDemandante.nombreDemandante }}">
              </div>
              <div class="col-md-1">
              <label  for="" class=" control-label"><h4><b>Edad</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.edadDemandante }}">
              </div>
              <div class="col-md-2">
              <label  for="" class=" control-label"><h4><b>Teléfono</b></h4></b></label>
              <input  disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.telefonoDemandante }}">
              </div>
          </div>
          <div class="row">
              <div class="col-md-3">
              <label  for="" class=" control-label"><h4><b>DPI</b></h4></label>
                <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.idDemandante.dpiDemandante }}">
              </div>
              <div class="col-md-2">
              <label  for="" class=" control-label"><h4><b>Cedula</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.cedulaDemandante }}">
              </div>
              <div class="col-md-2">
              <label  for="" class=" control-label"><h4><b>Estado Civil</b></h4></b></label>
              <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.idDemandante.idEstadocivil.estadocivil }}">
              </div>
          </div>
          <div class="row">
              <div class="col-md-2">
              <label  for="" class=" control-label"><h4><b>Profesión u Oficio</b></h4></label>
                <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.idDemandante.idTrabajo.trabajo }}">
              </div>
              <div class="col-md-2">
              <label  for="" class=" control-label"><h4><b>Ciudad</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.idCiudad.ciudad }}">
              </div>
              <div class="col-md-3">
              <label  for="" class=" control-label"><h4><b>Dirección de Trabajo</b></h4></b></label>
              <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.idDemandante.dirtrabajoDemandante }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-7">
            <label  for="" class=" control-label"><h4><b>Dirección de Recidencia</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.direccionDemandante }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-5">
                <label for=""><h3><b>Datos del Proceso</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
            <label for="" class=" control-label"><h4><b>Fecha de Inicio de la Relación</b></h4></b></label>
            <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{% if caso.laborales.fechaInicio %}{{ caso.laborales.fechaInicio|date('Y-m-d') }}{% endif %}">
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
            <label for="" class=" control-label"><h4><b>Fecha de Terminación de la Relación</b></h4></b></label>
            <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{% if caso.laborales.fechaFin %}{{ caso.laborales.fechaFin|date('Y-m-d') }}{% endif %}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-2">
            <label for="" class=" control-label"><h4><b>Salario Devengado</b></h4></b></label>
            <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.laborales.salario }}">
            </div>

            <div class="col-md-2">
            <label for="" class=" control-label"><h4><b>Trabajo Desempeñado</b></h4></b></label>
            <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.laborales.idTrabajo.trabajo }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-4">
                <label  for=""><h3><b>Prestaciones que Reclama</b></h3></label>
              </div>
            </div>
          </div>

          <div class="col-md-offset-1">
            <div class="row">
              <div class="col-md-3">
                <label class="cr-styled">
                    {% if caso.laborales.vaciones %}<input type="checkbox" disabled checked>
                    {% else %} <input type="checkbox" disabled> {% endif %}
                    <i class="fa"></i>
                    <label for="" class=" control-label"><h4><b>Vacaciones</b></h4></b></label>
                </label>
                </div>
                <div class="col-md-2">
                  <label class="cr-styled">
                      {% if caso.laborales.diasasueto %}<input type="checkbox" disabled checked>
                      {% else %} <input type="checkbox" disabled> {% endif %}
                      <i class="fa"></i>
                      <label for="" class=" control-label"><h4><b>Dias de Asueto</b></h4></b></label>
                  </label>
                </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label class="cr-styled">
                    {% if caso.laborales.indemnizacion %}<input type="checkbox" disabled checked>
                    {% else %} <input type="checkbox" disabled> {% endif %}
                    <i class="fa"></i>
                    <label for="" class=" control-label"><h4><b>Indemnizacion</b></h4></b></label>
                </label>
                </div>
                <div class="col-md-2">
                  <label class="cr-styled">
                      {% if caso.laborales.aguinaldo %}<input type="checkbox" disabled checked>
                      {% else %} <input type="checkbox" disabled> {% endif %}
                      <i class="fa"></i>
                      <label for="" class=" control-label"><h4><b>Aguinaldo</b></h4></b></label>
                  </label>
                </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label class="cr-styled">
                    {% if caso.laborales.diaseptimos %}<input type="checkbox" disabled checked>
                    {% else %} <input type="checkbox" disabled> {% endif %}
                    <i class="fa"></i>
                    <label for="" class=" control-label"><h4><b>Dias Septimos</b></h4></b></label>
                </label>
                </div>
                <div class="col-md-2">
                  <label class="cr-styled">
                      {% if caso.laborales.reajustesalarial %}<input type="checkbox" disabled checked>
                      {% else %} <input type="checkbox" disabled> {% endif %}
                      <i class="fa"></i>
                      <label for="" class=" control-label"><h4><b>Reajuste Salarial</b></h4></b></label>
                  </label>
                </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label class="cr-styled">
                    {% if caso.laborales.bonoanual %}<input type="checkbox" disabled checked>
                    {% else %} <input type="checkbox" disabled> {% endif %}
                    <i class="fa"></i>
                    <label for="" class=" control-label"><h4><b>Bono Anual</b></h4></b></label>
                </label>
                </div>
                <div class="col-md-3">
                  <label class="cr-styled">
                      {% if caso.laborales.salariosretenidos %}<input type="checkbox" disabled checked>
                      {% else %} <input type="checkbox" disabled> {% endif %}
                      <i class="fa"></i>
                      <label for="" class=" control-label"><h4><b>Salarios Retenidos</b></h4></b></label>
                  </label>
                </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <label class="cr-styled">
                    {% if caso.laborales.horasextra %}<input type="checkbox" disabled checked>
                    {% else %} <input type="checkbox" disabled> {% endif %}
                    <i class="fa"></i>
                    <label for="" class=" control-label"><h4><b>Horas Extraordinarias</b></h4></b></label>
                </label>
                </div>
                <div class="col-md-3">
                  <label class="cr-styled">
                      {% if caso.laborales.bonoincentivo %}<input type="checkbox" disabled checked>
                      {% else %} <input type="checkbox" disabled> {% endif %}
                      <i class="fa"></i>
                      <label for="" class=" control-label"><h4><b>Bono Incentivo</b></h4></b></label>
                  </label>
                </div>
            </div>
            <div class="row">
              <span class="form-horizontal">
                <label for="" class="col-sm-1 "><h4><b>Otros</b></h4></b></label>
                <div class="col-md-3">
                  <input disabled type="text" style="font-size:18px;" class="form-control " value="{{ caso.laborales.otros }}">
                </div>
              </span>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-6">
                <label for=""><h3><b>Pruebas</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-7">
               <textarea disabled class="form-control" style="font-size:18px;" rows="4" value="" id="comment">{{ caso.pruebasCaso }}</textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-5">
                <label for=""><h3><b>Datos del Demandado</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-4">
              <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.nombreDemandado }}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.telefonoDemandado }}">
              </div>
              <div class="col-md-1">
              <label for="" class=" control-label"><h4><b>Edad</b></h4></b></label>
              <input  disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.otroDemandado }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-7">
            <label for="" class=" control-label"><h4><b>Dirección</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.dirDemandado }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-7">
            <label for="" class=" control-label"><h4><b>Dirección de Notificación</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.dirnotificacionDemandado }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-5">
                <label for=""><h3><b>Datos del Estudiante</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-5">
              <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idEstudiante.idPersona.nombrePersona }}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Carné</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idEstudiante.carneEstudiante }}">
              </div>
          </div>
          <div class="row">
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idEstudiante.idPersona.telefonoPersona }}">
              </div>
              <div class="col-md-5">
              <label for="" class=" control-label"><h4><b>Dirección</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idEstudiante.idPersona.direccionPersona }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-5">
                <label  for=""><h3><b>Datos del Asesor</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-5">
              <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idPersona.nombrePersona }}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idPersona.telefonoPersona }}">
              </div>
          </div>
          <br>

          <table>
            <tr>
              <a href="{{ path('casos_indexlaborales') }}" class="btn default">Regresar</a>
            </tr>
            <tr>
              <a href="{{ path('casos_editlaboral', { 'idCaso': caso.idCaso}) }}" class="btn blue">Editar</a>
            </tr>
            <tr>
              <a href="#" class="btn btn-purple">Imprimir</a>
            </tr>
          </table>
        </div>
      </div>
{% endblock %}
