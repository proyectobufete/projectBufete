{% extends 'layout.html.twig' %}
{% block act5 %}
  active
{% endblock %}
{% block ac12 %}
  active
{% endblock %}
{% block title %}
  <h1>Crear Estudiante</h1>
{% endblock %}

{% block body %}

  <div class="portlet-body form">
    <div id="form_sample_1" class="form-horizontal">

      <div class="form-body colorform">
        <div class="col-md-offset-2">
          <div class="row">
            <div class="col-md-5">
              <form action="registro">
                <label>BUSCAR ESTUDIANTE
                </label><br>
                <label>Carné:
                </label>
                <div class="input-group">
                  <span class="input-group-btn">
                    <button type="submit" name="buscar" class="btn btn-effect-ripple btn blue">
                      <i class="fa fa-search"></i>
                    </button>
                  </span>
                  <input class="form-control" type="text" id="carne" name="carne" value="{{carne}}"/>
                </div>
              </form>
            </div>
          </div>
          {{ form_start(form,{'attr':{'role':'form'}}) }}
          <div class="row">
            <div class="col-md-6 col-md-offset-2">
              <label for="">
                <h4>
                  <b>Datos Personales</b>
                </h4>
              </label>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(form.nombrePersona,'Nombre Estudiante')}}
              {{form_widget(form.nombrePersona,{'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="col-md-2">
              {{form_label(form.telefonoPersona,'Número de Teléfono')}}
              {{form_widget(form.telefonoPersona,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(form.direccionPersona,'Dirección')}}
              {{form_widget(form.direccionPersona,{'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="col-md-2">
              {{form_label(form.emailPersona,'Correo Electrónico')}}
              {{form_widget(form.emailPersona,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(form.usuarioPersona,'Nombre de Usuario')}}
              {{form_widget(form.usuarioPersona,{'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="col-md-2">
              {{form_label(form.passPersona,'Contraseña')}}
              {{form_widget(form.passPersona,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(form.estadoPersona,'Estado')}}
              {{form_widget(form.estadoPersona) }}
            </div>
            <div class="col-md-2">
              {{form_label(form.role,'Tipo')}}
              {{form_widget(form.role) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(form.idBufete,'Bufete')}}
              {{form_widget(form.idBufete,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 col-md-offset-2">
              <label for="">
                <h4>
                  <b>Datos Académicos</b>
                </h4>
              </label>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(form.estudiantes.carneEstudiante,'No. Carné')}}
              {{form_widget(form.estudiantes.carneEstudiante,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label class="cr-styled">
                {{ form_widget(form.estudiantes.cierrePensum)}}
                <i class="fa"></i>
                {{form_label(form.estudiantes.cierrePensum,'Cierre de Pensum')}}
              </label>
            </div>
          </div>

        </div>
      </div>
      <div class="form-actions">
        <div class="row">
          <div class="col-md-offset-2 col-md-9">
            <button type="submit" name="Create" class="btn green">Crear</button>
            <a href="{{ path('personas_indexEstudiantes') }}">
              <button type="button" name="cancelar" class="btn default">Cancelar</button>
            </a>
          </div>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
  {% for message in app.session.flashbag().get('status') %}
    <div class="alert alert-success">
      {{message}}
    </div>
  {% endfor %}

{% endblock %}
