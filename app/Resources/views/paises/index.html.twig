{% extends 'layout.html.twig' %}

{% block act %}
active open
{% endblock %}

{% block ac %}
active
{% endblock %}


{% block title %}
  <h1>Listado de Paises</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-6">
        <div class="btn-group">
                  <a href="{{ path('paises_new') }}">
                    <button id="sample_editable_1_new" class="btn green">
                      Agregar Pa√≠s <i class="fa fa-plus"></i>
                    </button></a>
        </div>
      </div>
    </div>

  <div class="id="sample_1_wrapper" class="dataTable_wrapper table-responsive"">
      <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <thead>
          <tr role="row" class="">
            <th>Pais</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for paise in paises %}
              <tr>
                  <td>{{ paise.pais }}</td>
                  <td>{% if paise.estadoPais %}Activo{% else %}No{% endif %}</td>
                  <td>
                    <a href="{{ path('paises_show', { 'idPais': paise.idPais }) }}" class="btn btn-warning" >Ver</a>
                    <a href="{{ path('paises_edit', { 'idPais': paise.idPais }) }}" class="btn blue ">Editar</a>
                  </td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
  </div>

</div>
{% endblock %}
