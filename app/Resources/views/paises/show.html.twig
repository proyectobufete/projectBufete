{% extends 'layout.html.twig' %}
{% block act %} active {% endblock %}
{% block ac3 %} active {% endblock %}
{% block title %}
  <h1>Detalles</h1>
{% endblock %}
{% block body %}
      <div class="portlet-body">
        <div id="sample_1_wrapper" class="dataTable_wrapper table-responsive">
          <div class="col-md-4">
          <table class="table table-striped table-bordered table-hover dataTable no-footer">
              <tbody>
                <tr>
                    <th>Id pais</th>
                    <td>{{ paise.idPais }}</td>
                </tr>
                <tr>
                    <th>Pais</th>
                    <td>{{ paise.pais }}</td>
                </tr>
                <tr>
                    <th>Estadopais</th>
                    <td>{% if paise.estadoPais %}Activo{% else %}No{% endif %}</td>
                </tr>
              </tbody>
          </table>

          <table>
            <tr>
              <a href="{{ path('paises_index') }}" class="btn default">Regresar</a>
            </tr>
            <tr>
              <a href="{{ path('paises_edit', { 'idPais': paise.idPais }) }}" class="btn blue">Editar</a>
            </tr>
            <tr>
              {{ form_start(delete_form) }}
                  <button type="submit" class="btn red" name="Delete">Eliminar</button>
              {{ form_end(delete_form) }}
            </tr>
          </table>
          </div>
        </div>
      </div>
{% endblock %}
