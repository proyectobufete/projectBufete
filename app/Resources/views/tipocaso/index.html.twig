{% extends 'layout.html.twig' %}
{% block title %}
  <h1>Listado de Tipo de casos</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-6">
        <div class="btn-group">
                  <a href="{{ path('tipocaso_new') }}">
                    <button id="sample_editable_1_new" class="btn green">
                      Agregar Tipo de Caso <i class="fa fa-plus"></i>
                    </button></a>
        </div>
      </div>
    </div>

  <div class="id="sample_1_wrapper" class="dataTable_wrapper table-responsive"">
      <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <thead>
          <tr role="row" class="">
            <th>Tipo</th>
            <th>Estado </th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          {% for tipocaso in tipocasos %}
              <tr>
                  <td>{{ tipocaso.tipo }}</td>
                  <td>{% if tipocaso.estadoTipo %}Activo{% else %}No{% endif %}</td>
                  <td>
                    <a href="{{ path('tipocaso_show', { 'idTipo': tipocaso.idTipo }) }}" class="btn btn-warning" >Ver</a>
                    <a href="{{ path('tipocaso_edit', { 'idTipo': tipocaso.idTipo }) }}" class="btn blue ">Editar</a>
                  </td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
  </div>

</div>
{% endblock %}
