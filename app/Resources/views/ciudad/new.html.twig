{% extends 'layout.html.twig' %}
{% block act %} active {% endblock %}
{% block ac %} active {% endblock %}
      {% block title %}
        <h1>Crear Ciudad</h1>
      {% endblock %}
{% block body %}
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-4">
          <div class="form-group ">
            <div class="col-md-5">
              {{form_label(form.postalCiudad,'CÃ³digo Postal')}}
              {{ form_widget(form.postalCiudad,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="form-group ">
            <div class="col-md-5">
          <!--
              {{form_label(form.ciudad,'Nombre Ciudad')}}
              {{ form_widget(form.ciudad,{'attr':{'class' : 'form-control'}}) }}-->
              <label>Nombre</label>
              <input type="text" id="bufetebundle_ciudad_ciudad" name="bufetebundle_ciudad[ciudad]" required="required" maxlength="75" class="form-control">
            </div>
          </div>
          <div class="form-group ">
            <div class="col-md-5">
              {{dump(depas)}}
            <select id="bufetebundle_ciudad_idDepartamento" name="bufetebundle_ciudad[idDepartamento]" class="selectpicker" data-show-subtext="true" data-live-search="true" >
              {% for dep in depas %}
              <option value="{{ dep.idDepartamento }}">{{ dep.departamento }}</option>
              {% endfor %}
            </select>
            </div>
          </div>
          <div class="form-group ">
            <div class="col-md-5">
              <label class="cr-styled">
                  {{ form_widget(form.estadoCiudad)}}
                  <i class="fa"></i>
                  {{form_label(form.estadoCiudad,'Estado')}}
              </label>
            </div>
          </div>
          <div class="form-group">
          </div>
        </div>
        </div>
        <div class="colorformpie">
        <div class="form-actions ">
          <div class="row ">
            <div class="col-md-offset-4 col-md-9 ">
              <button type="submit" name="Create" class="btn green">Crear</button>
              <a href="{{ path('ciudad_index') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
{% endblock %}
