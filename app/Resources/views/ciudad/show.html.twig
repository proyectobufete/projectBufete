{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ciudad</h1>

    <table>
        <tbody>
            <tr>
                <th>Idciudad</th>
                <td>{{ ciudad.idCiudad }}</td>
            </tr>
            <tr>
                <th>Postalciudad</th>
                <td>{{ ciudad.postalCiudad }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ ciudad.ciudad }}</td>
            </tr>
            <tr>
                <th>Estadociudad</th>
                <td>{% if ciudad.estadoCiudad %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ciudad_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ciudad_edit', { 'idCiudad': ciudad.idCiudad }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
