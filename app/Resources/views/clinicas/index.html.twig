{% extends 'layout.html.twig' %}

{% block act6 %}
  active
{% endblock %}
{% block ac17 %}
  active
{% endblock %}

{% block title %}
  <h1>Listado de Clínicas</h1>
{% endblock %}
{% block body %}
  <div class="portlet-body">
    <div class="row">

      <div class="col-md-6">
        <div class="btn-group">
          <a href="{{ path('clinicas_new') }}">
            <button id="sample_editable_1_new" class="btn green">
              Agregar Clínica
              <i class="fa fa-plus"></i>
            </button>
          </a>
        </div>
      </div>
      <br>
      <br>

      <div class="col-md-12 col-sm-12 col-xs-6">
        <table class="table table-bordered ">
          <thead>
            <tr role="row" class="">
              <th>Estudiante</th>
              <th>Fechaasignacion</th>
              <th>Fechafin</th>
              <th>Estadoclinica</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {% for clinica in clinicas %}
              <tr>
                <td>{{ clinica.idEstudiante}}</td>
                <td>{% if clinica.fechaAsignacion %}{{ clinica.fechaAsignacion|date('Y-m-d') }}{% endif %}</td>
                <td>{% if clinica.fechaFin %}{{ clinica.fechaFin|date('Y-m-d') }}{% endif %}</td>
                <td>{{ clinica.estadoClinica }}</td>
                <td>
                  <a href="{{ path('clinicas_show', { 'idClinica': clinica.idClinica }) }}" class="btn yellow">Ver</a>
                  <a href="{{ path('clinicas_edit', { 'idClinica': clinica.idClinica }) }}" class="btn blue ">Editar</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
