{% extends 'layout.html.twig' %}
{% block act6 %}
  active
{% endblock %}
{% block ac17 %}
  active
{% endblock %}
      {% block title %}
        <h1>Editar Clínica</h1>
      {% endblock %}

{% block body %}
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(edit_form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-3">
            <div class="row">
            <div class="col-md-3">
              {{form_label(edit_form.fechaAsignacion,'Fecha de Asignación')}}
              {{ form_widget(edit_form.fechaAsignacion,{'attr':{'class' : 'form-control'}}) }}
            </div>
            <div class="col-md-3">
              {{form_label(edit_form.fechaFin,'Fecha de finalización')}}
              {{ form_widget(edit_form.fechaFin,{'attr':{'class' : 'form-control'}}) }}
            </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                {{form_label(edit_form.idEstudiante,'Estudiante')}}
                {{ form_widget(edit_form.idEstudiante,{'attr':{'class' : 'form-control'}}) }}
              </div>
              <div class="col-md-2">
                {{form_label(edit_form.idTipo,'Tipo de Clínica')}}
                {{ form_widget(edit_form.idTipo,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
            <div class="row">
              <div class="col-md-3  ">
                {{form_label(edit_form.estadoClinica,'Estado')}}
                {{ form_widget(edit_form.estadoClinica,{'attr':{'class' : 'form-control'}}) }}
              </div>
            </div>
        </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-3 col-md-9">
              <button type="submit" name="Create" class="btn green">Editar</button>
              <a href="{{ path('clinicas_index') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        {{ form_end(edit_form) }}
      </div>
    </div>

{% endblock %}
