{% extends 'layout.html.twig' %}

{% block act2 %}
active open
{% endblock %}

{% block ac5 %}
active
{% endblock %}

      {% block title %}
        <h1>Crear Trabajo</h1>
      {% endblock %}

{% block body %}
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-4">
          <div class="form-group ">
            <div class="col-md-5">
              {{form_label(form.trabajo,'Nombre')}}
              {{ form_widget(form.trabajo,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="form-group ">
            <div class="col-md-5">
              <label class="cr-styled">
                  {{ form_widget(form.estadoTrabajo)}}
                  <i class="fa"></i>
                  {{form_label(form.estadoTrabajo,'Estado')}}
              </label>
            </div>
          </div>
        </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-4 col-md-9">
              <button type="submit" name="Create" class="btn green">Crear</button>
              <a href="{{ path('trabajos_index') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>

{% endblock %}
