  <div class="portlet-body">
    <div class="row">
      <div class="col-md-4">
        <form method="get" action="" class="form-inline" role="search">
          <div class="form-group">
            <input type="text" name="query" value="{{ app.request.get('query') }}" class="form-control" placeholder="Buscar"  />
