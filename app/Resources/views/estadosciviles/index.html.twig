{% extends 'layout.html.twig' %}
{% block title %}
  <h1>Listado de Estados Civiles</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-6">
        <div class="btn-group">
                  <a href="{{ path('estadosciviles_new') }}">
                    <button id="sample_editable_1_new" class="btn green">
                      Agregar Estado Civil <i class="fa fa-plus"></i>
                    </button></a>
        </div>
      </div>
    </div>

  <div class="id="sample_1_wrapper" class="dataTable_wrapper table-responsive"">
      <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <thead>
          <tr role="row" class="">
            <th>Estado civil</th>
            <th>Estado</th>
            <th>opciones</th>
          </tr>
        </thead>
        <tbody>
          {% for estadoscivile in estadosciviles %}
          <tr>
              <td>{{ estadoscivile.estadocivil }}</td>
              <td>{% if estadoscivile.estadoEstadocivil %}Activo{% else %}No{% endif %}</td>
              <td>
                <a href="{{ path('estadosciviles_show', { 'idEstadocivil': estadoscivile.idEstadocivil }) }}" class="btn btn-warning" >Ver</a>
                <a href="{{ path('estadosciviles_edit', { 'idEstadocivil': estadoscivile.idEstadocivil }) }}" class="btn blue ">Editar</a>
              </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
  </div>

</div>
{% endblock %}
