{% extends 'layout.html.twig' %}
      {% block title %}
        <h1>Editar Estado Civil</h1>
      {% endblock %}

{% block body %}
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(edit_form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-4">
          <div class="form-group ">
            <div class="col-md-5">
              {{form_label(edit_form.estadocivil,'Nombre')}}
              {{ form_widget(edit_form.estadocivil,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="form-group ">
            <div class="col-md-5">
              {{form_label(edit_form.estadoEstadocivil,'Estado')}}
              {{ form_widget(edit_form.estadoEstadocivil,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
        </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-4 col-md-9">
              <button type="submit" name="Create" class="btn green">Editar</button>
              <a href="{{ path('estadosciviles_index') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        {{ form_end(edit_form) }}
      </div>
    </div>

{% endblock %}
